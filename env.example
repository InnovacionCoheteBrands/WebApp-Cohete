# ================================
# Configuracion basica obligatoria
# ================================

# Cadena de conexion Postgres local (ajusta usuario, clave y base de datos)
DATABASE_URL=postgres://postgres:postgres@localhost:5432/rocketflow

# Secreto para sesiones de Express (cambia este valor en produccion)
SESSION_SECRET=super-secret-change-me

# Entorno por defecto (usa "development" en local)
NODE_ENV=development

# ================================
# Opciones de base de datos (opc)
# ================================
# Desactiva SSL en conexiones locales
SUPABASE_USE_SSL=false
# Ajustes de pool; deja los valores por defecto si no los necesitas
DB_POOL_SIZE=10
DB_IDLE_TIMEOUT=20
DB_CONNECT_TIMEOUT=10

# ================================
# Integraciones de IA (opcionales)
# ================================
GEMINI_API_KEY=
GEMINI_MODEL=gemini-1.5-pro
GOOGLE_API_KEY=
GOOGLE_GENAI_API_KEY=
XAI_API_KEY=
GROK_API_KEY=

# ================================
# OAuth y autenticacion externa
# ================================
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
ISSUER_URL=
REPLIT_DOMAINS=
PRIMARY_ACCOUNT_SECRET=cohete-workflow-secret

# ================================
# Email transaccional (opcional)
# ================================
SENDGRID_API_KEY=

# ================================
# Variables de despliegue (opc)
# Se usan para entornos Replit; puedes dejarlas vacias en local
# ================================
PORT=5000
REPL_SLUG=
REPL_OWNER=
REPL_ID=
REPLIT_DB_URL=

